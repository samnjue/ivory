<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true">

    <!-- MAIN OVERLAY CONTAINER -->
    <LinearLayout
        android:id="@+id/overlayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <!-- RESPONSE CARD (AI Response + Scrollable) -->
        <FrameLayout
            android:id="@+id/responseCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/overlay_background_light"
            android:elevation="8dp"
            android:visibility="gone">

            <ScrollView
                android:id="@+id/responseScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/responseContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- AI Response Title -->
                    <TextView
                        android:id="@+id/aiResponseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Response"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/ai_response_title"
                        android:layout_marginBottom="8dp" />

                    <!-- AI Response Text -->
                    <TextView
                        android:id="@+id/aiResponseText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="@font/red_rose" />
                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <!-- THINKING STATE -->
        <FrameLayout
            android:id="@+id/thinkingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/overlay_background_light"
            android:elevation="8dp"
            android:visibility="gone"
            android:padding="16dp">

            <ImageView
                android:id="@+id/thinkingIvoryStar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ivorystar"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/thinkingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="Thinking"
                android:textSize="16sp"
                android:fontFamily="@font/red_rose"
                android:textColor="@android:color/white"
                android:layout_marginStart="36dp" />
        </FrameLayout>

        <!-- MINI INPUT BAR (at bottom) -->
        <include
            android:id="@+id/miniInputBar"
            layout="@layout/mini_assist_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- ORIGINAL FULL INPUT (initial state) -->
        <FrameLayout
            android:id="@+id/originalInputCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/overlay_background_light"
            android:elevation="8dp">

            <include layout="@layout/full_assist_input" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>