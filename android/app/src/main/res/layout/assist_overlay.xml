<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assistant_overlay_bg">

    <FrameLayout
        android:id="@+id/overlayCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/overlay_background"
        android:elevation="12dp"
        android:translationZ="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Paperclip -->
            <ImageButton
                android:id="@+id/paperclipButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_paperclip"
                android:scaleType="centerInside"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Input -->
            <EditText
                android:id="@+id/inputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:hint="Ask anything"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:fontFamily="@font/red_rose"
                android:imeOptions="actionSend"
                app:layout_constraintStart_toEndOf="@id/paperclipButton"
                app:layout_constraintEnd_toStartOf="@id/micContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Mic container -->
            <FrameLayout
                android:id="@+id/micContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toStartOf="@id/voiceContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Pulsating gradient stroke -->
                <ImageView
                    android:id="@+id/micStroke"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mic_gradient_stroke"
                    android:visibility="gone"
                    android:scaleType="centerCrop"/>

                <!-- Mic icon -->
                <ImageView
                    android:id="@+id/micIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mic"/>
                
                <!-- Inside micContainer -->
                <com.ivory.ivory.WaveformView
                    android:id="@+id/waveformView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- Send / Ivory star -->
            <FrameLayout
                android:id="@+id/voiceContainer"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/gradient_border"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ivorystar"/>

                <ImageButton
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_send"
                    android:visibility="gone"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</FrameLayout>