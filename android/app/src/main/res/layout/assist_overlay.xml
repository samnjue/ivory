<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#99000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/paperclipButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_paperclip"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:contentDescription="Attachment" />

        <EditText
            android:id="@+id/inputField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Ask anything..."
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:imeOptions="actionSend" />

        <FrameLayout
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp">

            <View
                android:id="@+id/voiceContainer"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/gradient_border"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="#ffffff18" /> 

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ivorystar" />
            </View>

            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_send"
                android:tint="#FFFFFF"
                android:visibility="gone"
                android:contentDescription="Send" />
        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>