<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true">

    <!-- Main Overlay Container -->
    <FrameLayout
        android:id="@+id/overlayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <!-- Unified Response Card -->
        <FrameLayout
            android:id="@+id/responseCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/overlay_background_light"
            android:elevation="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Response Scroll Container -->
                <ScrollView
                    android:id="@+id/responseScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="false"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:id="@+id/responseContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- AI Response Title with Gradient Icon -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:id="@+id/aiResponseIcon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_sparkles"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/aiResponseTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AI Response"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/red_rose" />
                        </LinearLayout>

                        <!-- AI Response Text -->
                        <TextView
                            android:id="@+id/aiResponseText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp"
                            android:fontFamily="@font/red_rose" />
                    </LinearLayout>
                </ScrollView>

                <!-- Mini Input Bar -->
                <FrameLayout
                    android:id="@+id/miniInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="0dp">

                    <FrameLayout
                        android:id="@+id/miniInputCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/overlay_background_light"
                        android:elevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <ImageButton
                                android:id="@+id/miniPaperclipButton"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_paperclip"
                                android:scaleType="centerInside"
                                android:padding="6dp"
                                android:contentDescription="Attachment" />

                            <EditText
                                android:id="@+id/miniInputField"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="Ask anything"
                                android:textSize="15sp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:inputType="textMultiLine"
                                android:maxLines="3"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/red_rose"
                                android:imeOptions="actionSend" />

                            <FrameLayout
                                android:id="@+id/miniMicContainer"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="6dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/miniMicBlurLayer"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_mic_gradient"
                                    android:scaleType="center"
                                    android:visibility="gone"
                                    android:alpha="0.7" />

                                <ImageView
                                    android:id="@+id/miniMicIcon"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_mic"
                                    android:scaleType="center" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center">

                                <FrameLayout
                                    android:id="@+id/miniVoiceContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_border_light"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ivorystar" />
                                </FrameLayout>

                                <ImageButton
                                    android:id="@+id/miniSendButton"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_send"
                                    android:scaleType="fitCenter"
                                    android:visibility="gone"
                                    android:contentDescription="Send" />
                            </FrameLayout>
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Thinking State -->
        <FrameLayout
            android:id="@+id/thinkingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/overlay_background_light"
            android:elevation="8dp"
            android:visibility="gone"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical|start">

                <ImageView
                    android:id="@+id/thinkingIvoryStar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ivorystar"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/thinkingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thinking"
                    android:textSize="16sp"
                    android:fontFamily="@font/red_rose" />
            </LinearLayout>
        </FrameLayout>

        <!-- Original Full Input -->
        <FrameLayout
            android:id="@+id/originalInputCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/overlay_background_light"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <!-- Paper-clip -->
                <ImageButton
                    android:id="@+id/paperclipButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_paperclip"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:contentDescription="Attachment" />

                <!-- Input -->
                <EditText
                    android:id="@+id/inputField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Ask anything"
                    android:textSize="16sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/red_rose"
                    android:imeOptions="actionSend" />

                <!-- Mic Container -->
                <FrameLayout
                    android:id="@+id/micContainer"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center">

                    <!-- Pulsating blurred gradient mic (behind) -->
                    <ImageView
                        android:id="@+id/micBlurLayer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mic_gradient"
                        android:scaleType="center"
                        android:visibility="gone"
                        android:alpha="0.7" />

                    <!-- Sharp gradient mic (on top) -->
                    <ImageView
                        android:id="@+id/micIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mic"
                        android:scaleType="center" />
                </FrameLayout>

                <!-- Ivory-star / Send container -->
                <FrameLayout
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center">

                    <FrameLayout
                        android:id="@+id/voiceContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_border_light"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ivorystar" />
                    </FrameLayout>

                    <ImageButton
                        android:id="@+id/sendButton"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_send"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        android:contentDescription="Send" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>