<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay_background_light"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/miniPaperclipButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_paperclip"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:contentDescription="Attachment" />

        <EditText
            android:id="@+id/miniInputField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Ask anything"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:fontFamily="@font/red_rose"
            android:imeOptions="actionSend" />

        <ImageButton
            android:id="@+id/miniSendButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_send"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="Send" />
    </LinearLayout>
</FrameLayout>