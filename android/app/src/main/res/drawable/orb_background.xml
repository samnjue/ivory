<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow (semi-transparent black oval) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A000000" />
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>

    <!-- Gradient Stroke Ring -->
    <item
        android:width="56dp"
        android:height="56dp"
        android:top="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#e63946"
                android:endColor="#4285f4"
                android:angle="45"
                android:type="linear" />
            <stroke
                android:width="3dp"
                android:color="@android:color/transparent" />
            <padding
                android:left="1.5dp"
                android:top="1.5dp"
                android:right="1.5dp"
                android:bottom="1.5dp" />
        </shape>
    </item>

</layer-list>