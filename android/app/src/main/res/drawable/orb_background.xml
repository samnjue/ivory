<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="50dp"
        android:height="50dp"
        android:top="3dp"
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#66000000" />
        </shape>
    </item>

    <item
        android:width="56dp"
        android:height="56dp"
        android:top="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#e63946"
                android:endColor="#4285f4"
                android:angle="45"
                android:type="linear" />
            <stroke
                android:width="3dp"
                android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>