<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <solid android:color="#99000000" />
        </shape>
    </item>
    
    <!-- Main background with stroke -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <solid android:color="#CC151515" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
        </shape>
    </item>
</layer-list>