{
  "cli": {
    "version": ">= 16.2.2",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "cache": {
          "disabled": true
        },
        "gradleCommand": ":app:assembleDebug",
        "buildType": "apk",
        "gradleProperties": {
          "org.gradle.jvmargs": "-Xmx4g -XX:+HeapDumpOnOutOfMemoryError",
          "android.enableJetifier": true,
          "android.useAndroidX": true
        },
        "env": {
          "GRADLE_OPTS": "-Xmx4g -Dorg.gradle.jvmargs=-Xmx4g -Dkotlin.daemon.jvm.options=-Xmx4g"
        }
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "cache": {
          "disabled": true
        }
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "cache": {
          "disabled": true
        },
        "gradleCommand": ":app:assembleRelease"
      }
    }
  },
  "submit": {
    "production": {}
  }
}